@model Product;
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create product</h2>
        </div>
        <div class="mb-3 row pd-1">
            <label asp-for="Id" class="p-0">Display order</label>
            <input asp-for="Id" type="text" class="form-control" />
        </div>
        <div class="mb-3 row pd-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div class="mb-3 row pd-1">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="index" class="btn btn-secondary form-control" border>Back to list</a>
            </div>
        </div>
        
        
            
    </div>
</form>