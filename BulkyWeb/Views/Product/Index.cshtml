@model List<Product>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create new product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
         <div class="row pb-3">
            <div class="row col-6">
                <h2 class="text-dark">
                    Person list
                </h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> Create new product
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Display order
            </th>
            <th>
                Category Name
            </th>
            <th>
                Preço
            </th>     
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=> u.Id))
        {
         <tr>
             <td>@obj.Id</td>
            <td>@obj.Name</td>
            <td>@obj.Price</td>
            <td class="last-td">
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
        
    </tbody>
    </table>
    </div>
</div>